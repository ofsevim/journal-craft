# ============================================
# Journal Craft Server - Environment Variables
# ============================================
# Bu dosyayı .env olarak kopyalayın
# cp .env.example .env

# Sunucu portu
PORT=3001

# Node ortamı
NODE_ENV=development

# İzin verilen origin'ler (virgülle ayrılmış)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate limiting (dakikada max istek)
RATE_LIMIT_MAX=10

# Body size limit
BODY_SIZE_LIMIT=5mb

